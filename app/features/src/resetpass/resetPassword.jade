.row.login_panel.login_dash
    .text-center.fa-2x.login_box
        form.form(ng-submit="submit()" name="passwordForm" novalidate)
            p.login-logo 
                 img(src="img/logo.png")
            p User name
            p {{userName}}
            p Reset Password
            
            input.form-control(type="password" placeholder="Enter New Password" ng-model="user.newPass" required="")
            
            input.form-control(type="password" placeholder="Confirm New Password" ng-model="user.confirmPass" required="")
            
            button.btn.btn-primary.form-control(type="submit") Reset Password
            .user_help
                .login_error_msg
                    p Please Enter And Confirm New Password
            .user_help_pass
                .login_error_msg
                    p Password Don't Match
           
