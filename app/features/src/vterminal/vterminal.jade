                                    span.required-icon(ng-show="auth_form.zip.$invalid && !auth_form.zip.$pristine") x
                                input.form-control(type="text" name="zip" placeholder="ex 92111" ng-model="user.zip" required="")
                            .form-group
                                label Billing phone:
                                    span.required-icon(ng-show="auth_form.phone.$invalid && !auth_form.phone.$pristine") x
                                input.form-control(type="text" name="phone" placeholder="ex 619-540-9909" ng-model="user.phone" required="")

