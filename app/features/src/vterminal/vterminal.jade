                                label Email:
                                    span.required-icon(ng-show="auth_form.email.$invalid && !auth_form.email.$pristine") x
                                input.form-control(type="email" name="email" placeholder="enter a valid email" ng-model="user.email" required="")
                            //.form-group
                                label IP address:
                                input.form-control(type="text" placeholder="ex 127.0.0.1")
                            .form-group
                                label Billing address:
                                    span.required-icon(ng-show="auth_form.address.$invalid && !auth_form.address.$pristine") x
                                input.form-control(type="text" name="address" placeholder="123 Main St" ng-model="user.address" required="")
                            .form-group
