// COMMUNICATION DETAIL
.panel.panel-default.comm-panel(ng-controller="CommCtrl")
    .panel-heading
        .row
            .col-md-2
                h2 Request:
                    //span.success {{reqStatus}}
                    span(ng-class="(reqStatus == 0) ? 'success' : 'failed'") {{RequestTxt}}
            .col-md-2
                h2 Response: 
                   span(ng-class="(repStatus == 0) ? 'success' : 'failed'") {{ResponseTxt}}

            .col-md-3
                a.toggleComm(href="" ng-click="isCollapsed = !isCollapsed; toggleText()") Hide Communication Details
            .col-md-3
                a(href="" clip-copy="getTextToCopy()" clip-click="doSomething()") Copy Details
    .panel-body.comm-details(collapse="isCollapsed")
        .row.request_row(ng-class="(reqStatus == 0) ? 'success-bg' : 'failed-bg'")
            .col-md-1
                h2 Request
                p {{RequestTxt}}
            .col-md-11
                p {{Request}}
        .row.response_row(ng-class="(repStatus == 0) ? 'success-bg' : 'failed-bg'")
            .col-md-1
                h2 Response
                p {{ResponseTxt}}
            .col-md-11
                p {{Response}}